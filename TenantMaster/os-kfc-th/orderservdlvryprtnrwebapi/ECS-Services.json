{
    "AWSTemplateFormatVersion": "2010-09-09",
	"Description": "AWS CloudFormation Template for ECS Services",
    "Parameters": {
        "TGStackName": {
            "Type": "String",
            "Description": "Enter the Stack Name of Service-TargetGroups"
        },
        "TDStackname":{
            "Type": "String",
			"Description": "Enter the Stack Name of Task Definitions"
        },
		"PrivateSubnet01": {
            "Type": "String",
            "Description": "Enter the Private Subnet 01 ID"
        },
		"PrivateSubnet02": {
            "Type": "String",
            "Description": "Enter the Private Subnet 02 ID"
        },
		"ECSSecurityGroup": {
            "Type": "String",
            "Description": "Enter the ECS Security Group"
        },
		"Environment" : {
			"Type" : "String",
			"Description" : "Enter the environment name as dev/qa/perf/uat/prod",
			"AllowedValues" : ["dev","perf","qa","uat","prod","pen"],
			"Default" : "dev",
			"MaxLength": 4,
			"MinLength": 2
		},
		"Tenant": {
			"Type": "String",
			"Description": "Enter the tenant/country key",
			"Default": "os-kfc-th",
			"MaxLength": 9,
			"MinLength": 9
		},
		"AppName": {
			"Type": "String",
			"Default": "orderserv",
			"Description": "Application Name"
		},
		"ECSClusterName": {
            "Type": "String",
            "Description": "Enter the Name of ECS Cluster"
        },
		"TenantRolePolicyStackName" :{
			"Type": "String",
            "Description": "Enter the TenantRolePolicyStackName"		
		},
		"NamespaceId" :{
			"Type": "String",
            "Description": "Enter the private DNS Namespace Id"		
		},
		"AppMeshName" :{
			"Type": "String",
            "Description": "Enter the name of App Mesh"		
		}
    },
    "Resources": {
        "orderservdlvryprtnrwebapiECSService": {
            "Type": "AWS::ECS::Service",
			"DependsOn": ["orderservdlvryprtnrwebapiServiceDiscovery"],
            "Properties": {
                "Cluster": {
                    "Fn::Sub": "arn:aws:ecs:${AWS::Region}:${AWS::AccountId}:cluster/${ECSClusterName}"
                },
				"NetworkConfiguration" : {
					"AwsvpcConfiguration" : {
						"AssignPublicIp" : "DISABLED",
						"Subnets":[{"Ref" : "PrivateSubnet01"},{"Ref" : "PrivateSubnet02"}],
						"SecurityGroups":[{"Ref" : "ECSSecurityGroup"}]
					}
				},
                "LaunchType": "FARGATE",
                "DeploymentConfiguration": {
                    "MaximumPercent": 200,
                    "MinimumHealthyPercent": 100
                },
                "DesiredCount": 1,
                "LoadBalancers": [{
                    "ContainerName": "orderserv-deliverypartner-webapis",
                    "ContainerPort": 9101,
                    "TargetGroupArn": {
                        "Fn::ImportValue": {
                            "Fn::Sub": "${TGStackName}-orderservdlvryprtnrwebapiTargetGroup"
                        }
                    }
                }],
                "SchedulingStrategy": "REPLICA",
                "ServiceName": "orderserv-deliverypartner-webapis-service",
                "TaskDefinition": {
                    "Fn::ImportValue" : {"Fn::Sub" : "${TDStackname}-orderservdlvryprtnrwebapitaskdef"}
                },
				"ServiceRegistries": [{
                    "ContainerName": "orderserv-deliverypartner-webapis",
                    "ContainerPort": 9101,
                    "RegistryArn": {
                        "Fn::GetAtt": ["orderservdlvryprtnrwebapiServiceDiscovery", "Arn"]
                    }
                }],
				"PropagateTags" : "SERVICE",
				"Tags" : [
						{"Key": "Name", "Value": "orderserv-deliverypartner-webapis-service" }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
            }
        },
		"orderservdlvryprtnrwebapiECSServiceScalingTarget":{
            "Type":"AWS::ApplicationAutoScaling::ScalableTarget",
            "DependsOn":"orderservdlvryprtnrwebapiECSService",
            "Properties":{
                "MaxCapacity":1,
                "MinCapacity":1,
                "ResourceId":{ "Fn::Join":[ "", [ "service/", { "Ref":"ECSClusterName" } , "/", { "Fn::GetAtt":[ "orderservdlvryprtnrwebapiECSService", "Name" ] } ] ] },
                "RoleARN": {
					"Fn::ImportValue" : {"Fn::Sub" : "${TenantRolePolicyStackName}-ECSAutoScalingRoleARN"}
					},
                "ScalableDimension":"ecs:service:DesiredCount",
                "ServiceNamespace":"ecs"
            }
        },
        "orderservdlvryprtnrwebapiECSSServiceScalingPolicy":{
            "Type":"AWS::ApplicationAutoScaling::ScalingPolicy",
            "DependsOn":"orderservdlvryprtnrwebapiECSServiceScalingTarget",
            "Properties":{
                "PolicyName": { 
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-orderservdlvryprtnrwebapi-cpu-asp"
                }, 
                "PolicyType":"TargetTrackingScaling",
                "ScalingTargetId":{
                    "Ref": "orderservdlvryprtnrwebapiECSServiceScalingTarget"
                },
                "TargetTrackingScalingPolicyConfiguration":{
                    "PredefinedMetricSpecification" : {
                        "PredefinedMetricType" : "ECSServiceAverageCPUUtilization"
                    },
                    "ScaleInCooldown" : 300,
                    "ScaleOutCooldown" : 300,
                    "TargetValue" : 70
                }
            }
        },
		"orderservdlvryprtnrwebapiServiceDiscovery": {
            "Type": "AWS::ServiceDiscovery::Service",
            "Properties": {
                "Name": {
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-dlvryprtnrwebapi"
                },
                "Description": "Deliverypartner Web API Service Discovery",
                "DnsConfig": {
                    "DnsRecords": [{
                        "Type": "SRV",
                        "TTL": 60
                    }],
                    "NamespaceId": {"Ref" : "NamespaceId"}
                },
                "HealthCheckCustomConfig" : {"FailureThreshold" : 1},
				"Tags": [
						{"Key": "Name", "Value": {"Fn::Sub" : "orderserv-${Environment}-${Tenant}-dlvryprtnrwebapi" } }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
            }
        },
		"orderservdlvryprtnrwebapiAppMeshNode":{
			"Type": "AWS::AppMesh::VirtualNode",
			"DependsOn" : "orderservdlvryprtnrwebapiServiceDiscovery",
			"Properties": {
				"MeshName": {"Ref" : "AppMeshName"},
				"VirtualNodeName": {"Fn::Sub" : "orderserv-${Environment}-${Tenant}-dlvryprtnrwebapi-node"},
				"Spec": {
				  "BackendDefaults": {
					"ClientPolicy": {}
				  },
				  "Backends": [],
				  "Listeners": [
					{
					  "PortMapping": {
						"Port": 9101,
						"Protocol": "http"
					  }
					}
				  ],
				  "Logging": {},
				  "ServiceDiscovery": {
					"DNS": {
					  "Hostname": {
					   "Fn::Join": [
							".",
							[{"Fn::GetAtt": ["orderservdlvryprtnrwebapiServiceDiscovery", "Name"]},{"Fn::Sub" : "orderserv-${Environment}-${Tenant}-pvt-dns-ns"}]
						]
					  }
					}
				  }
				},
				"Tags": [
						{"Key": "Name", "Value": {"Fn::Sub" : "orderserv-${Environment}-${Tenant}-dlvryprtnrwebapi-node" } }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
			  }
		},
		"orderservdlvryprtnrwebapiAppMeshService":{
			"DependsOn" : "orderservdlvryprtnrwebapiAppMeshNode",
			"Type": "AWS::AppMesh::VirtualService",
			  "Properties": {
				"MeshName": {"Ref" : "AppMeshName"},
				"VirtualServiceName":{
					   "Fn::Join": [
							".",
							[{"Fn::GetAtt": ["orderservdlvryprtnrwebapiServiceDiscovery", "Name"]},{"Fn::Sub" : "orderserv-${Environment}-${Tenant}-pvt-dns-ns"}]
						]
					  },
				"Spec": {
				  "Provider": {
					"VirtualNode": {
					  "VirtualNodeName": {"Fn::GetAtt": ["orderservdlvryprtnrwebapiAppMeshNode", "VirtualNodeName"]}
					}
				  }
				},
				"Tags": [
						{"Key": "Name", "Value": {
							"Fn::Join": [
							".",
								[{"Fn::GetAtt": ["orderservdlvryprtnrwebapiServiceDiscovery", "Name"]},
								{"Fn::Sub" : "orderserv-${Environment}-${Tenant}-pvt-dns-ns"}]
								]} 
						}, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
			  }
		}
	}
}
