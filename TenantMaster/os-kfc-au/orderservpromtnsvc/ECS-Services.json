{
    "AWSTemplateFormatVersion": "2010-09-09",
	"Description": "AWS CloudFormation Template for ECS Services",
    "Parameters": {
        "TGStackName": {
            "Type": "String",
            "Description": "Enter the Stack Name of Service-TargetGroups"
        },
        "TDStackname":{
            "Type": "String",
			"Description": "Enter the Stack Name of Task Definitions"
        },
		"PrivateSubnet01": {
            "Type": "String",
            "Description": "Enter the Private Subnet 01 ID"
        },
		"PrivateSubnet02": {
            "Type": "String",
            "Description": "Enter the Private Subnet 02 ID"
        },
		"ECSSecurityGroup": {
            "Type": "String",
            "Description": "Enter the ECS Security Group"
        },
		"Environment" : {
			"Type" : "String",
			"Description" : "Enter the environment name as dev/qa/perf/uat/sec/prod",
			"AllowedValues" : ["dev","perf","qa","uat","sec","prod","pen","uat1"],
			"Default" : "dev",
			"MaxLength": 4,
			"MinLength": 2
		},
		"Tenant": {
			"Type": "String",
			"Description": "Enter the tenant/country key",
			"Default": "os-kfc-in",
			"MaxLength": 9,
			"MinLength": 9
		},
		"AppName": {
			"Type": "String",
			"Default": "order-serv",
			"Description": "Application Name"
		},
		"ECSClusterName": {
            "Type": "String",
            "Description": "Enter the Name of ECS Cluster"
        },
		"TenantRolePolicyStackName" :{
			"Type": "String",
            "Description": "Enter the TenantRolePolicyStackName"		
		},
		"NamespaceId" :{
			"Type": "String",
            "Description": "Enter the rpivate DNS Namespace Id"		
		}
    },
    "Resources": {
        "orderservpromtnsvcECSService": {
            "Type": "AWS::ECS::Service",
			"DependsOn": ["orderservpromtnsvcServiceDiscovery"],
            "Properties": {
                "Cluster": {
                    "Fn::Sub": "arn:aws:ecs:${AWS::Region}:${AWS::AccountId}:cluster/${ECSClusterName}"
                },
				"NetworkConfiguration" : {
					"AwsvpcConfiguration" : {
						"AssignPublicIp" : "DISABLED",
						"Subnets":[{"Ref" : "PrivateSubnet01"},{"Ref" : "PrivateSubnet02"}],
						"SecurityGroups":[{"Ref" : "ECSSecurityGroup"}]
					}
				},
                "LaunchType": "FARGATE",
                "DeploymentConfiguration": {
                    "MaximumPercent": 200,
                    "MinimumHealthyPercent": 100
                },
                "DesiredCount": 1,
                "SchedulingStrategy": "REPLICA",
                "ServiceName": "orderserv-promotion-service-service",
                "TaskDefinition": {
                    "Fn::ImportValue" : {"Fn::Sub" : "${TDStackname}-orderservpromtnsvctaskdef"}
                },
				"ServiceRegistries": [{
                    "ContainerName": "orderserv-promotion-service",
                    "ContainerPort": 9005,
                    "RegistryArn": {
                        "Fn::GetAtt": ["orderservpromtnsvcServiceDiscovery", "Arn"]
                    }
                }],
				"PropagateTags" : "SERVICE",
				"Tags" : [
					{"Key": "Name", "Value": "orderserv-promotion-service-service" }, 
					{"Key": "AppName", "Value":{ "Ref": "AppName" }},
					{"Key": "Environment", "Value": { "Ref": "Environment" }},
					{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
						]
					
            }
        },
		"orderservpromtnsvcECSServiceScalingTarget":{
            "Type":"AWS::ApplicationAutoScaling::ScalableTarget",
            "DependsOn":"orderservpromtnsvcECSService",
            "Properties":{
                "MaxCapacity":1,
                "MinCapacity":1,
                "ResourceId":{ "Fn::Join":[ "", [ "service/", { "Ref":"ECSClusterName" } , "/", { "Fn::GetAtt":[ "orderservpromtnsvcECSService", "Name" ] } ] ] },
                "RoleARN": {
					"Fn::ImportValue" : {"Fn::Sub" : "${TenantRolePolicyStackName}-ECSAutoScalingRoleARN"}
					},
                "ScalableDimension":"ecs:service:DesiredCount",
                "ServiceNamespace":"ecs"
            }
        },
        "orderservpromtnsvcECSServiceScalingPolicy":{
            "Type":"AWS::ApplicationAutoScaling::ScalingPolicy",
            "DependsOn":"orderservpromtnsvcECSServiceScalingTarget",
            "Properties":{
                "PolicyName": { 
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-orderservpromtnsvc-cpu-asp"
                }, 
                "PolicyType":"TargetTrackingScaling",
                "ScalingTargetId":{
                    "Ref": "orderservpromtnsvcECSServiceScalingTarget"
                },
                "TargetTrackingScalingPolicyConfiguration":{
                    "PredefinedMetricSpecification" : {
                        "PredefinedMetricType" : "ECSServiceAverageCPUUtilization"
                    },
                    "ScaleInCooldown" : 300,
                    "ScaleOutCooldown" : 300,
                    "TargetValue" : 70
                }
            }
        },
		"orderservpromtnsvcServiceDiscovery": {
            "Type": "AWS::ServiceDiscovery::Service",
            "Properties": {
                "Name": {
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-promtnsvc"
                },
                "Description": "Promotion Service GRPC Service Discovery",
                "DnsConfig": {
                    "DnsRecords": [{
                        "Type": "SRV",
                        "TTL": 60
                    }],
                    "NamespaceId": {"Ref" : "NamespaceId"}
                },
                "HealthCheckCustomConfig" : {"FailureThreshold" : 1},
				"Tags": [
						{"Key": "Name", "Value": { "Fn::Sub": "orderserv-${Environment}-${Tenant}-promtnsvc" } }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
            }
        }
	}
}
