{
    "AWSTemplateFormatVersion": "2010-09-09",
	"Description": "AWS CloudFormation Template for ECS Services",
    "Parameters": {
        "TGStackName": {
            "Type": "String",
            "Description": "Enter the Stack Name of Service-TargetGroups"
        },
        "TDStackname":{
            "Type": "String",
			"Description": "Enter the Stack Name of Task Definitions"
        },
		"PrivateSubnet01": {
            "Type": "String",
            "Description": "Enter the Private Subnet 01 ID"
        },
		"PrivateSubnet02": {
            "Type": "String",
            "Description": "Enter the Private Subnet 02 ID"
        },
		"ECSSecurityGroup": {
            "Type": "String",
            "Description": "Enter the ECS Security Group"
        },
		"Environment" : {
			"Type" : "String",
			"Description" : "Enter the environment name as dev/qa/perf/uat/prod",
			"AllowedValues" : ["dev","perf","qa","uat","prod","pen"],
			"Default" : "dev",
			"MaxLength": 4,
			"MinLength": 2
		},
		"Tenant": {
			"Type": "String",
			"Description": "Enter the tenant/country key",
			"Default": "os-kfc-jp",
			"MaxLength": 9,
			"MinLength": 9
		},
		"AppName": {
			"Type": "String",
			"Default": "orderserv",
			"Description": "Application Name"
		},
		"ECSClusterName": {
            "Type": "String",
            "Description": "Enter the Name of ECS Cluster"
        },
		"TenantRolePolicyStackName" :{
			"Type": "String",
            "Description": "Enter the TenantRolePolicyStackName"		
		},
		"NamespaceId" :{
			"Type": "String",
            "Description": "Enter the private DNS Namespace Id"		
		}
    },
    "Resources": {
        "orderservjpdelivryprtnrsvcECSService": {
            "Type": "AWS::ECS::Service",
            "Properties": {
                "Cluster": {
                    "Fn::Sub": "arn:aws:ecs:${AWS::Region}:${AWS::AccountId}:cluster/${ECSClusterName}"
                },
				"NetworkConfiguration" : {
					"AwsvpcConfiguration" : {
						"AssignPublicIp" : "DISABLED",
						"Subnets":[{"Ref" : "PrivateSubnet01"},{"Ref" : "PrivateSubnet02"}],
						"SecurityGroups":[{"Ref" : "ECSSecurityGroup"}]
					}
				},
                "LaunchType": "FARGATE",
                "DeploymentConfiguration": {
                    "MaximumPercent": 200,
                    "MinimumHealthyPercent": 100
                },
                "DesiredCount": 1,
                "SchedulingStrategy": "REPLICA",
                "ServiceName": "orderserv-deliverypartner-service-service",
                "TaskDefinition": {
                    "Fn::ImportValue" : {"Fn::Sub" : "${TDStackname}-orderservjpdelivryprtnrsvctaskdef"}
                },
				"ServiceRegistries": [{
                    "ContainerName": "orderserv-deliverypartner-service",
                    "ContainerPort": 9015,
                    "RegistryArn": {
                        "Fn::GetAtt": ["orderservjpdelivryprtnrsvcServiceDiscovery", "Arn"]
                    }
                }],
				"PropagateTags" : "SERVICE",
				"Tags" : [
						{"Key": "Name", "Value": "orderserv-deliverypartner-service-service" }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
					]
			}					
        },
		"orderservjpdelivryprtnrsvcECSServiceScalingTarget":{
            "Type":"AWS::ApplicationAutoScaling::ScalableTarget",
            "DependsOn":"orderservjpdelivryprtnrsvcECSService",
            "Properties":{
                "MaxCapacity":1,
                "MinCapacity":1,
                "ResourceId":{ "Fn::Join":[ "", [ "service/", { "Ref":"ECSClusterName" } , "/", { "Fn::GetAtt":[ "orderservjpdelivryprtnrsvcECSService", "Name" ] } ] ] },
                "RoleARN": {
					"Fn::ImportValue" : {"Fn::Sub" : "${TenantRolePolicyStackName}-ECSAutoScalingRoleARN"}
					},
                "ScalableDimension":"ecs:service:DesiredCount",
                "ServiceNamespace":"ecs"
            }
        },
        "orderservjpdelivryprtnrsvcECSSServiceScalingPolicy":{
            "Type":"AWS::ApplicationAutoScaling::ScalingPolicy",
            "DependsOn":"orderservjpdelivryprtnrsvcECSServiceScalingTarget",
            "Properties":{
                "PolicyName": { 
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-orderservjpdelivryprtnrsvc-cpu-asp"
                }, 
                "PolicyType":"TargetTrackingScaling",
                "ScalingTargetId":{
                    "Ref": "orderservjpdelivryprtnrsvcECSServiceScalingTarget"
                },
                "TargetTrackingScalingPolicyConfiguration":{
                    "PredefinedMetricSpecification" : {
                        "PredefinedMetricType" : "ECSServiceAverageCPUUtilization"
                    },
                    "ScaleInCooldown" : 300,
                    "ScaleOutCooldown" : 300,
                    "TargetValue" : 70
                }
            }
		},
		"orderservjpdelivryprtnrsvcServiceDiscovery": {
            "Type": "AWS::ServiceDiscovery::Service",
            "Properties": {
                "Name": {
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-delivryprtnrsvc"
                },
                "Description": "Additional Charge GRPC Service Discovery",
                "DnsConfig": {
                    "DnsRecords": [{
                        "Type": "SRV",
                        "TTL": 60
                    }],
                    "NamespaceId": {"Ref" : "NamespaceId"}
                },
                "HealthCheckCustomConfig" : {"FailureThreshold" : 1},
				"Tags" : [
						{"Key": "Name", "Value": { "Fn::Sub": "orderserv-${Environment}-${Tenant}-delivryprtnrsvc" } }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
						
                ]
            }
        }
	}
}