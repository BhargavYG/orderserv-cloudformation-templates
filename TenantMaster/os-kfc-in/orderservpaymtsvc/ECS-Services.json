{
    "AWSTemplateFormatVersion": "2010-09-09",
	"Description": "AWS CloudFormation Template for ECS Services",
    "Parameters": {
        "TGStackName": {
            "Type": "String",
            "Description": "Enter the Stack Name of Service-TargetGroups"
        },
        "TDStackname":{
            "Type": "String",
			"Description": "Enter the Stack Name of Task Definitions"
        },
		"PrivateSubnet01": {
            "Type": "String",
            "Description": "Enter the Private Subnet 01 ID"
        },
		"PrivateSubnet02": {
            "Type": "String",
            "Description": "Enter the Private Subnet 02 ID"
        },
		"ECSSecurityGroup": {
            "Type": "String",
            "Description": "Enter the ECS Security Group"
        },
		"Environment" : {
			"Type" : "String",
			"Description" : "Enter the environment name as dev/qa/perf/uat/sec/prod/dr",
			"AllowedValues" : ["dev","perf","qa","uat","sec","prod","pen","uat1","dr"],
			"Default" : "dev",
			"MaxLength": 4,
			"MinLength": 2
		},
		"Tenant": {
			"Type": "String",
			"Description": "Enter the tenant/country key",
			"Default": "os-kfc-in",
			"MaxLength": 9,
			"MinLength": 9
		},
		"AppName": {
			"Type": "String",
			"Default": "orderserv",
			"Description": "Application Name"
		},
		"ECSClusterName": {
            "Type": "String",
            "Description": "Enter the Name of ECS Cluster"
        },
		"TenantRolePolicyStackName" :{
			"Type": "String",
            "Description": "Enter the TenantRolePolicyStackName"		
		},
		"NamespaceId" :{
			"Type": "String",
            "Description": "Enter the private DNS Namespace Id"		
		},
		"AppMeshName" :{
			"Type": "String",
            "Description": "Enter the name of App Mesh"		
		}
    },
    "Resources": {
        "orderservpaymtsvcECSService": {
            "Type": "AWS::ECS::Service",
			"DependsOn": ["orderservpaymtsvcServiceDiscovery"],
            "Properties": {
                "Cluster": {
                    "Fn::Sub": "arn:aws:ecs:${AWS::Region}:${AWS::AccountId}:cluster/${ECSClusterName}"
                },
				"NetworkConfiguration" : {
					"AwsvpcConfiguration" : {
						"AssignPublicIp" : "DISABLED",
						"Subnets":[{"Ref" : "PrivateSubnet01"},{"Ref" : "PrivateSubnet02"}],
						"SecurityGroups":[{"Ref" : "ECSSecurityGroup"}]
					}
				},
                "LaunchType": "FARGATE",
                "DeploymentConfiguration": {
                    "MaximumPercent": 200,
                    "MinimumHealthyPercent": 100
                },
                "DesiredCount": 1,
                "LoadBalancers": [{
                    "ContainerName": "orderserv-payment-service",
                    "ContainerPort": 9003,
                    "TargetGroupArn": {
                        "Fn::ImportValue": {
                            "Fn::Sub": "${TGStackName}-orderservpaymtsvcTargetGroup"
                        }
                    }
                }],
                "SchedulingStrategy": "REPLICA",
                "ServiceName": "orderserv-payment-service-service",
                "TaskDefinition": {
                    "Fn::ImportValue" : {"Fn::Sub" : "${TDStackname}-orderservpaymtsvctaskdef"}
                },
				"ServiceRegistries": [{
                    "ContainerName": "orderserv-payment-service",
                    "ContainerPort": 9003,
                    "RegistryArn": {
                        "Fn::GetAtt": ["orderservpaymtsvcServiceDiscovery", "Arn"]
                    }
                }],
				"PropagateTags" : "SERVICE",
				"Tags" : [
					{"Key": "Name", "Value": "orderserv-payment-service-service" }, 
					{"Key": "AppName", "Value":{ "Ref": "AppName" }},
					{"Key": "Environment", "Value": { "Ref": "Environment" }},
					{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
						]
				
            }
        },
		"orderservpaymtsvcECSServiceScalingTarget":{
            "Type":"AWS::ApplicationAutoScaling::ScalableTarget",
            "DependsOn":"orderservpaymtsvcECSService",
            "Properties":{
                "MaxCapacity":1,
                "MinCapacity":1,
                "ResourceId":{ "Fn::Join":[ "", [ "service/", { "Ref":"ECSClusterName" } , "/", { "Fn::GetAtt":[ "orderservpaymtsvcECSService", "Name" ] } ] ] },
                "RoleARN": {
					"Fn::ImportValue" : {"Fn::Sub" : "${TenantRolePolicyStackName}-ECSAutoScalingRoleARN"}
					},
                "ScalableDimension":"ecs:service:DesiredCount",
                "ServiceNamespace":"ecs"
            }
        },
        "orderservpaymtsvcECSSServiceScalingPolicy":{
            "Type":"AWS::ApplicationAutoScaling::ScalingPolicy",
            "DependsOn":"orderservpaymtsvcECSServiceScalingTarget",
            "Properties":{
                "PolicyName": { 
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-orderservpaymtsvc-cpu-asp"
                }, 
                "PolicyType":"TargetTrackingScaling",
                "ScalingTargetId":{
                    "Ref": "orderservpaymtsvcECSServiceScalingTarget"
                },
                "TargetTrackingScalingPolicyConfiguration":{
                    "PredefinedMetricSpecification" : {
                        "PredefinedMetricType" : "ECSServiceAverageCPUUtilization"
                    },
                    "ScaleInCooldown" : 300,
                    "ScaleOutCooldown" : 300,
                    "TargetValue" : 70
                }
            }
        },
		"orderservpaymtsvcServiceDiscovery": {
            "Type": "AWS::ServiceDiscovery::Service",
            "Properties": {
                "Name": {
                    "Fn::Sub": "orderserv-${Environment}-${Tenant}-paymtsvc"
                },
                "Description": "Payment Service API Service Discovery",
                "DnsConfig": {
                    "DnsRecords": [{
                        "Type": "SRV",
                        "TTL": 60
                    }],
                    "NamespaceId": {"Ref" : "NamespaceId"}
                },
                "HealthCheckCustomConfig" : {"FailureThreshold" : 1},
				"Tags": [
						{"Key": "Name", "Value": { "Fn::Sub": "orderserv-${Environment}-${Tenant}-paymtsvc" } }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
            }
        },
		"orderservpaymtsvcAppMeshNode":{
			"Type": "AWS::AppMesh::VirtualNode",
			"DependsOn" : "orderservpaymtsvcServiceDiscovery",
			"Properties": {
				"MeshName": {"Ref" : "AppMeshName"},
				"VirtualNodeName": {"Fn::Sub" : "orderserv-${Environment}-${Tenant}-paymtsvc-node"},
				"Spec": {
				  "BackendDefaults": {
					"ClientPolicy": {}
				  },
				  "Backends": [],
				  "Listeners": [
					{
					  "PortMapping": {
						"Port": 9003,
						"Protocol": "http"
					  }
					}
				  ],
				  "Logging": {},
				  "ServiceDiscovery": {
					"DNS": {
					  "Hostname": {
					   "Fn::Join": [
							".",
							[{"Fn::GetAtt": ["orderservpaymtsvcServiceDiscovery", "Name"]},{"Fn::Sub" : "orderserv-${Environment}-${Tenant}-pvt-dns-ns"}]
						]
					  }
					}
				  }
				},
				"Tags": [
						{"Key": "Name", "Value": {"Fn::Sub" : "orderserv-${Environment}-${Tenant}-paymtsvc-node"} }, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
			  }
		},
		"orderservpaymtsvcAppMeshService":{
			"DependsOn" : "orderservpaymtsvcAppMeshNode",
			"Type": "AWS::AppMesh::VirtualService",
			  "Properties": {
				"MeshName": {"Ref" : "AppMeshName"},
				"VirtualServiceName":{
					   "Fn::Join": [
							".",
							[{"Fn::GetAtt": ["orderservpaymtsvcServiceDiscovery", "Name"]},{"Fn::Sub" : "orderserv-${Environment}-${Tenant}-pvt-dns-ns"}]
						]
					  },
				"Spec": {
				  "Provider": {
					"VirtualNode": {
					  "VirtualNodeName": {"Fn::GetAtt": ["orderservpaymtsvcAppMeshNode", "VirtualNodeName"]}
					}
				  }
				},
				"Tags": [
						{"Key": "Name", "Value": {
							"Fn::Join": [
							".",
								[{"Fn::GetAtt": ["orderservpaymtsvcServiceDiscovery", "Name"]},
								{"Fn::Sub" : "orderserv-${Environment}-${Tenant}-pvt-dns-ns"}]
								]} 
						}, 
						{"Key": "AppName", "Value": { "Ref": "AppName" }},
						{"Key": "Environment", "Value": { "Ref": "Environment" }},
						{"Key": "Tenant", "Value": { "Ref": "Tenant" }}
                ]
			  }
		}
	}
}
